{
	"name": "react-magnifier",
	"version": "2.1.1",
	"description": "React image zoom component",
	"keywords": [
		"react",
		"component",
		"image",
		"zoom",
		"magnify",
		"magnifier",
		"magnifying glass"
	],
	"main": "lib/Magnifier.js",
	"module": "lib/Magnifier.es.js",
	"author": "Samuel Meuli <me@samuelmeuli.com>",
	"repository": "github:samuelmeuli/react-magnifier",
	"homepage": "https://samuelmeuli.github.io/react-magnifier",
	"license": "MIT",
	"scripts": {
		"start": "npm-run-all build:rollup --parallel start:*",
		"start:rollup": "rollup --config --sourcemap --watch",
		"start:storybook": "start-storybook --port 3000",
		"build": "run-s build:*",
		"build:clean": "rm -rf lib",
		"build:rollup": "rollup --config",
		"build:storybook": "build-storybook --output-dir dist",
		"format": "prettier --ignore-path .gitignore --write",
		"lint": "eslint"
	},
	"dependencies": {
		"lodash.debounce": "^4.0.8",
		"lodash.throttle": "^4.1.1",
		"prop-types": "^15.6.2"
	},
	"peerDependencies": {
		"react": "^16.0.0"
	},
	"devDependencies": {
		"@babel/core": "^7.1.2",
		"@babel/preset-env": "^7.1.0",
		"@babel/preset-react": "^7.0.0",
		"@storybook/react": "^4.0.2",
		"babel-loader": "^8.0.4",
		"eslint": "^5.3.0",
		"eslint-config-airbnb": "17.1.0",
		"eslint-config-prettier": "^3.4.0",
		"eslint-plugin-import": "^2.14.0",
		"eslint-plugin-jsx-a11y": "^6.1.1",
		"eslint-plugin-react": "^7.11.0",
		"husky": "^1.1.2",
		"lint-staged": "^8.1.0",
		"node-sass": "^4.9.0",
		"npm-run-all": "^4.1.3",
		"postcss": "^7.0.5",
		"prettier": "^1.15.3",
		"react": "^16.4.1",
		"react-dom": "^16.4.1",
		"rollup": "^1.1.0",
		"rollup-plugin-babel": "^4.0.3",
		"rollup-plugin-postcss": "^1.6.2"
	},
	"files": [
		"lib/"
	],
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.js": [
			"yarn format",
			"yarn lint",
			"git add"
		],
		"*.{css,html,json,md,scss,ts,vue,yml}": [
			"yarn format",
			"git add"
		]
	}
}
