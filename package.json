{
	"name": "react-magnifier",
	"version": "1.1.0",
	"description": "React component for zooming in on images",
	"keywords": [
		"react",
		"component",
		"image",
		"zoom",
		"magnify",
		"magnifying glass"
	],
	"main": "lib/Magnifier.js",
	"module": "lib/Magnifier.es.js",
	"author": "Samuel Meuli <dev@samuelmeuli.com>",
	"repository": "github:samuelmeuli/react-magnifier",
	"homepage": "https://samuelmeuli.github.io/react-magnifier",
	"license": "MIT",
	"scripts": {
		"start": "npm-run-all build:rollup --parallel start:*",
		"start:rollup": "rollup --config --sourcemap --watch",
		"start:storybook": "start-storybook --port 3000",
		"build": "run-s build:*",
		"build:rollup": "rollup --config",
		"build:storybook": "build-storybook --output-dir dist",
		"lint": "eslint ."
	},
	"dependencies": {
		"lodash.debounce": "^4.0.8",
		"lodash.throttle": "^4.1.1",
		"prop-types": "^15.6.2"
	},
	"peerDependencies": {
		"react": "^16.0.0"
	},
	"devDependencies": {
		"@babel/core": "^7.1.2",
		"@babel/preset-env": "^7.1.0",
		"@babel/preset-react": "^7.0.0",
		"@storybook/react": "^4.0.0-rc.6",
		"babel-loader": "^8.0.4",
		"eslint": "^4.19.1",
		"eslint-config-airbnb": "^16.1.0",
		"eslint-plugin-import": "^2.13.0",
		"eslint-plugin-jsx-a11y": "^6.0.2",
		"eslint-plugin-react": "^7.10.0",
		"husky": "^1.1.2",
		"node-sass": "^4.9.0",
		"npm-run-all": "^4.1.3",
		"postcss": "^7.0.5",
		"react": "^16.4.1",
		"react-dom": "^16.4.1",
		"rollup": "^0.66.6",
		"rollup-plugin-babel": "^4.0.3",
		"rollup-plugin-postcss": "^1.6.2"
	},
	"files": [
		"lib/"
	],
	"husky": {
		"hooks": {
			"pre-commit": "yarn lint",
			"pre-push": "yarn lint"
		}
	}
}
